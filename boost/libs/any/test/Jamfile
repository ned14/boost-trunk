subproject libs/any/test ;

import testing ;

rule any-test ( sources + )
{
    return [ run $(sources) : : : <include>$(BOOST_ROOT) ] ;
}

test-suite any :
    [ any-test ../any_test.cpp ]
    [ any-test any_to_ref_test.cpp <lib>../../test/build/boost_test_exec_monitor ]
    ;


