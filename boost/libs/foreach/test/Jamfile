subproject libs/foreach/test ;

# bring in rules for testing
import testing ;

# Make tests run by default.
DEPENDS all : foreach ;

{
    test-suite "foreach"
       : [ run stl_byval.cpp ]
         [ run stl_byref.cpp ]
         [ run array_byval.cpp ]
         [ run array_byref.cpp ]
         [ run cstr_byval.cpp ]
         [ run cstr_byref.cpp ]
         [ run pair_byval.cpp ]
         [ run pair_byref.cpp ]
         [ run user_defined.cpp ]
         [ run call_once.cpp ]
         [ run rvalue_const.cpp ]
         [ run rvalue_nonconst.cpp ]
       ;
}
