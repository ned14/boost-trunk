subproject libs/wave/samples/quick_start/build ;

exe quick_start
    : ../quick_start.cpp 
      <lib>../../../build/boost_wave
      <lib>../../../../../libs/filesystem/build/boost_filesystem
    :
      <sysinclude>$(BOOST_ROOT)
      <vc-7_1><*><rtti>off        # workaround for compiler bug
      <vc-7_1-stlport><*><rtti>off
    :
      <runtime-link>static
      <threading>single
    ;

