import testing ;

# Make tests run by default.
DEPENDS all : test ;

{

test-suite "io"
   :    [  run ios_state_unit_test.cpp 
                <lib>@boost/libs/test/build/boost_unit_test_framework
              : # args
              : # input files
              : std::locale-support
        ]

        [ run ios_state_test.cpp 
                <lib>@boost/libs/test/build/boost_test_exec_monitor
              : # args
              : # input files
              : std::locale-support
        ]
  ;
}
