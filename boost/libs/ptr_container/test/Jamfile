
subproject libs/ptr_container/test ;

import testing ;
import ../../serialization/build/serialization ;

rule sc-test ( name : requirements * )
{
    return [ 
      run $(name).cpp 
      <lib>../../test/build/boost_unit_test_framework
      <lib>../../serialization/build/boost_serialization
      : : :
      $(requirements)
      toolset::require-boost-spirit-support
           ]
    ;
}

rule sc-example ( name : requirements * )
{
    return [ 
      run $(name).cpp 
      <lib>../../serialization/build/boost_serialization
      : : :
      $(requirements)
      toolset::require-boost-spirit-support
           ]
    ;
}

test-suite ptr_container :
    [ sc-test ptr_vector ]
    [ sc-test ptr_list ]
    [ sc-test ptr_deque ]
    [ sc-test ptr_set ]  
    [ sc-test ptr_map ]
    [ sc-test ptr_array : <vacpp><*><build>no ]
#    [ sc-test simple_test ] 
    [ sc-test tree_test ]   
#    [ sc-test pointainer_speed ]
    [ sc-test incomplete_type_test ]
    [ sc-example view_example ]
#    [ sc-test ptr_container_adapter ]
#    [ sc-test ptr_map_adapter ]
    [ sc-test iterator_test ]
    [ sc-example tut1 ]   
    [ sc-test indirect_fun ]
    [ sc-test serialization ]
#    [ sc-test test_derived_class_ptr ]
    ;
