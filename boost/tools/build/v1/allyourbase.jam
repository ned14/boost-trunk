# dwa 6/4/01 - added for boost
# Breaks $(<) into path components
# This could certainly be improved now that we have David Turner's regular expression features.
#
# split-path <foo>bar/<bee>baz/mumble  => <foo>bar <bee>baz mumble 
rule split-path
{
    local result ;
    local parent = $(<:P) ;
    if $(NT)
    {
        switch $(<:G=)
        {
        # It turns out that to match a backslash, you need a /quadruple/ slash
        # in the case clause!
        case *\\\\*:* : # continue splitting
        case *:\\\\*\\\\* :  # continue splitting
        case *:/*\\\\* :  # continue splitting
        case *:\\\\*/* :  # continue splitting
        case *:/*/* :  # continue splitting
        case *:/* : result = $(<) ;
        case *:\\\\* : result = $(<) ;
        case *: : result = $(<) ;
        }
    }

    if ( ! $(<:B) ) && ( $(<) != $(DOT) ) # handle the case where $(<) is all grist.
    {
        result ?= $(<:G) ;
    }
    else if ( ! $(parent:G=) )
    {
        result ?= $(<) ;
    }
    else
    {
        local p = [ split-path $(parent) ] ;
        local b = [ strip-grist $(<) ] ;
        p += $(b:D=) ; # can't use :B here because it destroys . and ..
        result ?= $(p) ;
    }
    return $(result) ;
}

rule split # string pattern
{
    local source = $(<[1]) ;
    local divider = $(<[2]) ;
    local pattern = "(.*)("$(divider)")(.*)" ;

    # SUBST rule is weird. When there's no match it returns the original string.
    local match = [ SUBST $(source) $(pattern) $1$2$3xxx ] ;
    if ( $(match) = $(source) )
    {
        return $(source) ;
    }
    else
    {
        local head = [ SUBST $(source) $(pattern) $1 ] ;
        local tail = [ SUBST $(source) $(pattern) $3 ] ;
        return [ split $(head) $(divider) ] $(tail) ;
    }
}

