
import modules ;

local dll-suffix = so ;
if [ modules.peek : OS ] in NT CYGWIN
{
    dll-suffix = lib ;
}

project ext ;

lib a : 
    : <file>bin/$toolset/debug/a.$(dll-suffix) <variant>debug
    :
    : <include>debug
    ;
    
lib a :
    : <file>bin/$toolset/release/a.$(dll-suffix) <variant>release
    :
    : <include>release
    ;
    