local BOOST_ROOT = [ modules.peek : BOOST_ROOT ] ;

use-project /libx : ../libx/src ;

project program
    : requirements 
        <include>$(BOOST_ROOT)
        <threading>multi
        <library>/qt//qt
        <hardcode-dll-paths>true
        <stdlib>stlport
        <dependency>/libx
#        <dependency>../libx/src
           
 : usage-requirements 
        <include>$(BOOST_ROOT)
        : 
        default-build release
        <threading>multi
        <library>/qt//qt
        <stdlib>stlport
        <hardcode-dll-paths>true
        ;


build-project main ;

