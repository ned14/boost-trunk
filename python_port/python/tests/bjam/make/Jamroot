using tool : 1.0 ;
using tool : 2.0 ;
import util : say2 : say2local ;

util.say "hi" ;
say2local "howdy" ;

project test : requirements <variant>release ;

constant FOO : foo ;
ECHO "FOO is" $(FOO) ;

#ECHO "GLOB RESULT:" [ glob-tree * ] ;

make a : a.cpp : $(__name__).copy ;

rule copy ( targets : sources : properties * )
{
    ECHO "XXXXXXXXXXX copy $(targets) : $(sources) : $(properties)" ;
}

actions copy
{
    cp $(FOO) $(>) $(<)
}

