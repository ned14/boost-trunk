import testing ;

lib boost_unit_test_framework ;

rule test_all
{
   local all_rules = ;

   for local fileb in [ glob *.cpp ]
   {
      all_rules += [ run $(fileb) boost_unit_test_framework
      :  # additional args
      :  # test-files
      :  # requirements
      ] ;
   }

    return $(all_rules) ;
}

test-suite heap : [ test_all r ] : <threading>multi ;
